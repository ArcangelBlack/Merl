		<ScrollView>
			<StackLayout Padding="20" Spacing="10">
				<Entry Placeholder="Nombre" Text="{Binding Path=UserModel.Name, Mode=TwoWay}" BackgroundColor="White"/>

				<Entry Placeholder="Apellidos" Text="{Binding Path=UserModel.Surnames, Mode=TwoWay}" BackgroundColor="White"/>

				<Entry Placeholder="Email" Text="{Binding Path=UserModel.Email, Mode=TwoWay}" BackgroundColor="White"/>

				<Entry Placeholder="Teléfono" TextColor="{StaticResource FontColor}" Text="{Binding Path=UserModel.Phone, Mode=TwoWay}" BackgroundColor="White"/>

				<Label Text="Fecha de Nacimiento"/>
				<DatePicker BackgroundColor="White"  Date="{Binding UserModel.BirthdayDate, Mode=TwoWay}">
					<DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
				</DatePicker>

				<Entry x:Name="PasswordEntry" Text="{Binding Path=UserModel.Password}" Placeholder="Password" HeightRequest="40" TextColor="Black" IsPassword="True"/>

				<Button Command="{Binding Path=SaveCommand}" Text="Guardar"/>

			</StackLayout>
		</ScrollView>
