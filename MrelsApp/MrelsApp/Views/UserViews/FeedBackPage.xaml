<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrelsApp.Views.UserViews.FeedBackPage"
			 Title="FeedBack" BackgroundColor="{StaticResource BgBase}">
    <ContentPage.Content>
        <Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="25"/>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" FontSize="30" TextColor="#3498DB" Text="How was your workout?"/>

			<Image Grid.Row="2" Grid.Column="0" HorizontalOptions="Center"  WidthRequest="100" HeightRequest="100" Source="ic_sentiment_very_satisfied"/>

			<Image Grid.Row="2" Grid.Column="1" HorizontalOptions="Center"  WidthRequest="100" HeightRequest="100" Source="ic_sentiment_neutral"/>

			<Image Grid.Row="3" Grid.Column="0" HorizontalOptions="Center"  WidthRequest="100" HeightRequest="100" Source="ic_sentiment_satisfied"/>

			<Image Grid.Row="3" Grid.Column="1" HorizontalOptions="Center"  WidthRequest="100" HeightRequest="100" Source="ic_sentiment_very_dissatisfied"/>

		</Grid>
    </ContentPage.Content>
</ContentPage>