<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrelsApp.Views.MainViews.LoginPage">
    <ContentPage.Content>
	    <StackLayout
		    Orientation="Vertical" Padding="20" Spacing="30">
		    <BoxView HeightRequest="10"/>
		    <Image HorizontalOptions="Center" WidthRequest="300"/>
		    <Frame BackgroundColor="#BF043055" HasShadow="False">
			    <StackLayout Orientation="Vertical" Spacing="10">
				    <Entry x:Name="EmailEntry" Text="{Binding Path=EmailAddress}" Placeholder="Email" HeightRequest="40" TextColor="Black"/>
				    <Entry x:Name="PasswordEntry" Text="{Binding Path=Password}" Placeholder="Password" HeightRequest="40" TextColor="Black" IsPassword="True"/>
			    </StackLayout>
		    </Frame>
		    <Button Command="{Binding Path=SubmitCommand}" Text="Login" TextColor="White" 
					FontAttributes="Bold" FontSize="20" HorizontalOptions="FillAndExpand" BackgroundColor="#F49131"/>
	    </StackLayout>
	</ContentPage.Content>
</ContentPage>