<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrelsApp.Views.WorkoutViews.VideoPage"
			 Title="Bicep Curl">
    <ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition Height="10"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			
			<Image
				Grid.Column="0" Grid.ColumnSpan="2" Source="ejercicio.JPG"></Image>

			<StackLayout Grid.Row="2" Spacing="20" Padding="15">
				<Label HorizontalOptions="CenterAndExpand" Text="6"></Label>
				<Label HorizontalOptions="CenterAndExpand" FontSize="22" Text="KG"></Label>
			</StackLayout>

			<StackLayout Grid.Column="1" Grid.Row="2" Spacing="20" Padding="15">
				<Label HorizontalOptions="CenterAndExpand" Text="12"></Label>
				<Label HorizontalOptions="CenterAndExpand" FontSize="22" Text="REPS"></Label>
			</StackLayout>

		</Grid>
    </ContentPage.Content>
</ContentPage>