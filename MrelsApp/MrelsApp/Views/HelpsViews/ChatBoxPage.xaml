<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrelsApp.Views.ChatBoxPage"
			 Title="Chat Box">
    <ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Editor VerticalOptions="FillAndExpand" HorizontalOptions="Center" Text="How was your training? Do you any questions to your coach?" ></Editor>
			<Grid Grid.Row="1">
				<!--<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>-->
				<Button x:Name="BtnEndWorkout" Grid.Row="0" Style="{StaticResource PrimaryButton}" Text="Save my feedback" Command="{Binding Path=NextCommand}"/>
			</Grid>
		</Grid>
    </ContentPage.Content>
</ContentPage>