<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MyTheme.Base" parent="Theme.AppCompat.Light">
  </style>

  <style name="MyTheme" parent="MyTheme.Base">
  </style>

  <style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background 2196F3-->
    <item name="colorPrimary">#fbfbd0</item>
    <!-- colorPrimaryDark is used for the status bar 1976D2 Azul-->
    <item name="colorPrimaryDark">#fbfbd0</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets 14d281 verde-->
    <!--Controles como switch / Reproductor / TextBox-->
    <item name="colorAccent">#14d281</item>
    <!-- You can also set colorControlNormal, colorControlActivated  colorControlHighlight and colorSwitchThumbNormal. -->

    <!--Controles como el scroll-->
    <item name="colorControlNormal">#1976d2</item>

    <item name="colorButtonNormal">#d27619</item>

    <item name="windowActionModeOverlay">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <!--Rosa-->
    <item name="colorAccent">#fbfbd0</item>
  </style>

</resources>
